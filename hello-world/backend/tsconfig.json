{
  "include": ["src/**/*"],

  "compilerOptions": {
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "noEmit": true, // Since Bun can directly interpret TypeScript, there's no reason to compile to JavaScript...
    "allowImportingTsExtensions": true // ...and this allows us to directly import from TypeScript files.
  }
}
